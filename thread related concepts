import threading
import time


def worker(name, delay):
    print(f"[{name}] Thread starting...")
    time.sleep(delay)
    print(f"[{name}] Thread exiting...")


t1 = threading.Thread(target=worker, args=("Thread-1", 2))
t2 = threading.Thread(target=worker, args=("Thread-2", 3))

print("Creating threads...")
t1.start()
t2.start()


print("Main thread waiting for child threads to complete...")
t1.join()
t2.join()
print("Both threads finished.")


if t1 == t2:
    print("Threads are equal (same object).")
else:
    print("Threads are NOT equal (different objects).")

print("Main thread exiting.")
